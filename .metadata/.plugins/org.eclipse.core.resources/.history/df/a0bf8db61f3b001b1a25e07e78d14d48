package com.skilldistillery.rental.controllers;
import static org.hamcrest.CoreMatchers.equalTo;
import static org.hamcrest.CoreMatchers.is;
import static org.junit.Assert.assertThat;
import java.io.IOException;
import java.util.List;
import org.junit.jupiter.api.Test;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.context.SpringBootTest.WebEnvironment;
import org.springframework.boot.test.web.client.TestRestTemplate;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import com.fasterxml.jackson.databind.ObjectMapper;


@SpringBootTest(webEnvironment=WebEnvironment.DEFINED_PORT)
class CarControllerTest {
	
	  private String baseUrl = "http://localhost:8090/";


	  @Test
	  public void testListAllFilms() throws IOException{
	    TestRestTemplate restTest = new TestRestTemplate();
	    ResponseEntity<String> response = restTest.getForEntity(baseUrl + "api/car", String.class);
	    assertThat( response.getStatusCode(), equalTo(HttpStatus.OK));
	    ObjectMapper mapper = new ObjectMapper();
	    // map to a Collection of Film objects
	    List<Car> films = mapper.readValue(response.getBody(),  mapper.getTypeFactory().constructCollectionType(List.class, Car.class));
	    assertThat( films.get(0).getTitle(), is("ACADEMY DINOSAUR"));
	  }
	  
	  
	@Test
	@DisplayName("List Cars")
	void test1() {
		assertNotNull(cCon);
		assertNotNull(cCon.listAllCars(resp));
		assertTrue(cCon.listAllCars(resp).size() >0);
	
	}
	
	@Test
	@DisplayName("Create Car")
	void test2() {
		Car newCar = new Car();
		assertNotNull(cCon);
		assertNotNull(cCon.createNewCar(newCar, resp, req));

	
	}

	
}




  